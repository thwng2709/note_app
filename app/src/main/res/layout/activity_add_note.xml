<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.AddNoteActivity">

    <TextView
        android:id="@+id/add_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/add_note_title"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:contentDescription="@string/save"
        android:src="@drawable/ic_done_24"

        app:layout_constraintTop_toTopOf="@id/add_note_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_12dp"
        android:textSize="@dimen/text_size_20sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:hint="@string/title_note_hint"
        android:fontFamily="@font/poppins"

        android:background="@drawable/orange_border_1dp"
        android:layout_marginTop="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/add_note_title"/>

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:hint="@string/content_note_hint"
        android:gravity="top"
        android:padding="@dimen/_12dp"
        android:textSize="@dimen/text_size_18sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/_16dp"
        android:background="@drawable/orange_border_1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_title" />

</androidx.constraintlayout.widget.ConstraintLayout>